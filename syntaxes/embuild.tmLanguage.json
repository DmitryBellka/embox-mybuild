{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Embuild",
	"patterns": [
		{
			"include": "#expression"
		},
		{
			"include": "#headers"
		},
		{
			"include": "#module_headers"
		},
		{
			"include": "#module_functions"
		}
	],
	"repository": {
		"expression": {
      			"patterns": [
				      	{ "include": "#keywords" },
					{ "include": "#paren-expression" },
					{ "include": "#strings" },
					{"include": "#vars"}
				]
    		},
		"module_headers":{
			"patterns": [{
				"name":"entity.name.function.embuild",
				"match":"@\\S*"
			}]
		},
		"headers":{
			"patterns": [
				{"name":"keyword.control.package.embuild","match": "\\b(package)\\b"},
				{"name":"keyword.control.abstract.embuild","match": "\\b(abstract)\\b"},
				{"name":"keyword.control.module.embuild","match": "\\b(module)\\b"}
			]	
		},
		"module_functions":{
			"patterns": [
				{"name":"entity.name.selector.embuild", "match": "\\b(extends)\\b"}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.embuild",
					"match": "\\b(if|while|for|return)\\b"
				},
				{
					"name":"keyword.operator",
					"match": "\\b(source|depends)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.embuild",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.embuild",
					"match": "\\\\."
				}
			]
		},
		"paren-expression": {
      			"begin": "\\{",
      			"end": "\\}",
      			"beginCaptures": {
        			"0": { "name": "punctuation.paren.open" }
      			},
      			"endCaptures": {
        			"0": { "name": "punctuation.paren.close" }
      			},
      			"name": "expression.group",
      			"patterns": [{ "include": "#expression" }]
    		},
		"words":{
			"patterns": [
				{"name":"variable","match": "\\$[A-Za-z]\\w*|\\$\\{[A-Za-z]\\w*\\}"}
			]
		},
		"operators":{
			"patterns": [
				{"name":"keyword.operator","match": "[=*]"}
			]
		},
		"vars":{
      			"patterns": [
					{ "include": "#paren-vars" },
					{"include": "#words"},
					{ "include": "#strings" },
					{"include": "#operators"}
				]
		},
		"paren-vars":{
			"begin": "\\(",
			"end": "\\)",
      			"beginCaptures": {
        			"0": { "name": "punctuation.paren.open" }
      			},
      			"endCaptures": {
        			"0": { "name": "punctuation.paren.close" }
      			},
      			"name": "vars.group",
      			"patterns": [{ "include": "#vars" }]
		}
	},
	"scopeName": "source.mybuild"
}